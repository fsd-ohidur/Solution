@using Solution.Core.Models.CNF.Dto;
@model ChargeDto
@{
	var title = "Edit Charge";
	ViewData["Title"] = title;
}
<div class="card">
	<div class="card-header">
		<h3>@title</h3>
	</div>
	<div class="card-body">
		<form method="post">
			<input asp-for="Id" hidden />

			<div class="form-floating mb-2">
				<input asp-for="NameFull" class="form-control" placeholder=" " />
				<label asp-for="NameFull" class="control-label"></label>
				<span asp-validation-for="NameFull" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Rate" class="form-control" placeholder=" " />
				<label asp-for="Rate" class="control-label"></label>
				<span asp-validation-for="Rate" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<select asp-for="Department" class="form-control" asp-items="ViewBag.DepartmentList">
					@*<option disabled selected>--Select Department--</option>*@
				</select>
				<label asp-for="Department" class="control-label">Department</label>
				<span asp-validation-for="Department" class="text-danger"></span>
			</div>
			<div class="form-check form-switch">
				<input class="form-check-input" type="checkbox" asp-for="IsDisabled">
				<label class="form-check-label" asp-for="IsDisabled"></label>
			</div>
			
			<hr />
			<div class="form-group mt-2">
				<div class="d-flex mb-2">
					<button type="submit" class="btn btn-lg btn-warning">Update</button>
					<a asp-action="Index" class="btn btn-lg btn-info ms-1">Back to list</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}