@using Solution.Core.Models.HR.Dto;
@model DepartmentDto
@{
	var title = "Edit Department";
	ViewData["Title"] = title;
}
<div class="card">
	<div class="card-header">
		<h3>@title</h3>
	</div>
	<div class="card-body">
		<form method="post">
			<div class="form-floating mb-2">
				<input asp-for="DeptName" class="form-control" placeholder=" " readonly />
				<label asp-for="DeptName" class="control-label"></label>
				<span asp-validation-for="DeptName" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="DeptNameShort" class="form-control" placeholder=" " readonly />
				<label asp-for="DeptNameShort" class="control-label"></label>
				<span asp-validation-for="DeptNameShort" class="text-danger"></span>
			</div>
			<hr />

			<div class="form-group mt-2">
				<div class="d-flex mb-2">
					<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
					<a asp-action="Index" class="btn btn-lg btn-warning ms-1">Back to list</a>
				</div>
			</div>

		</form>

	</div>

</div>
