@using Solution.Core.Models.HR.Dto;
@model CreateDesignationDto

@{
	var title = "Create Designation";
	ViewData["Title"] = title;
}

<div class="card">
	<div class="card-header">
		<h2>@title</h2>
	</div>
	<div class="card-body">
		<form method="post">
			<div class="form-floating mb-2">
				<input asp-for="DesigName" class="form-control" placeholder=" " />
				<label asp-for="DesigName" class="control-label"></label>
				<span asp-validation-for="DesigName" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="DesigNameShort" class="form-control" placeholder=" " />
				<label asp-for="DesigNameShort" class="control-label"></label>
				<span asp-validation-for="DesigNameShort" class="text-danger"></span>
			</div>
			
			<div class="form-group mt-2">
				<div class="d-flex mb-2">
					<button type="submit" class="btn btn-lg btn-success">Create</button>
					<a asp-action="Index" class="btn btn-lg btn-warning ms-1">Back to list</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}