@using Solution.Core.Models.HR.Dto;

@model DesignationDto
@{
	var title = "Delete Designation";
	ViewData["Title"] = title;
}
<div class="card">
	<div class="card-header bg-danger">
		<h3 class="text-white">@title</h3>
	</div>
	<div class="card-body">
		<form method="post">
			<input asp-for="Id" hidden />
			<div class="form-floating mb-2">
				<input asp-for="DesigName" class="form-control" placeholder=" " readonly />
				<label asp-for="DesigName" class="control-label"></label>
				<span asp-validation-for="DesigName" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="DesigNameShort" class="form-control" placeholder=" " readonly />
				<label asp-for="DesigNameShort" class="control-label"></label>
				<span asp-validation-for="DesigNameShort" class="text-danger"></span>
			</div>
			
			<hr />
			<div class="form-group mt-2">
				<div class="d-flex mb-2">
					<button type="submit" class="btn btn-lg btn-danger">Delete</button>
					<a asp-action="Index" class="btn btn-lg btn-warning ms-1">Back to list</a>
				</div>
			</div>

		</form>
	</div>
</div>