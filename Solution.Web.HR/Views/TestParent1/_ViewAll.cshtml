@using Solution.Core.Models.Test.Dto;
@model IEnumerable<TestParentDto>

<table class="table table-striped table-bordered table-responsive">
	<thead class="bg-info align-middle text-center">
		<tr>
			<th>@Html.DisplayNameFor(model => model.ParentName)</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.ParentName</td>
				<td>
					<div class="btn-group" role="group" aria-label="Basic mixed styles example">
						@*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>*@
						<a onclick="showInPopup('@Url.Action("AddOrEdit","TestParent",new{id=item.Id},Context.Request.Scheme)','Update Parent')" class="btn btn-success text-white mt-1"><i class="fas fa-edit"></i> </a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
