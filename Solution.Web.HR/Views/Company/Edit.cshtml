@using Solution.Core.Models.Common.Dto;
@model CompanyDto
@{
	var title = "Edit Company";
	ViewData["Title"] = title;
}
<div class="card">
	<div class="card-header">
		<h3>@title</h3>
	</div>
	<div class="card-body">
		<form method="post">
			<input asp-for="Id" hidden />
@*			<input asp-for="CreatedBy" hidden />
			<input asp-for="CreatedDate" hidden />*@

			<div class="form-floating mb-2">
				<input asp-for="ComName" class="form-control" placeholder=" " />
				<label asp-for="ComName" class="control-label"></label>
				<span asp-validation-for="ComName" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Basic" class="form-control" placeholder=" " />
				<label asp-for="Basic" class="control-label"></label>
				<span asp-validation-for="Basic" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="HRent" class="form-control" placeholder=" " />
				<label asp-for="HRent" class="control-label"></label>
				<span asp-validation-for="HRent" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Medical" class="form-control" placeholder=" " />
				<label asp-for="Medical" class="control-label"></label>
				<span asp-validation-for="Medical" class="text-danger"></span>
			</div>
			<div class="form-group form-check mb-4">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="IsInactive" /> @Html.DisplayNameFor(model => model.IsInactive)
				</label>
				<span asp-validation-for="IsInactive" class="text-danger"></span>
			</div>

			<div class="form-group mt-2">
				<div class="d-flex mb-2">
					<button type="submit" class="btn btn-lg btn-info">Update</button>
					<a asp-action="Index" class="btn btn-lg btn-warning ms-1">Back to list</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}